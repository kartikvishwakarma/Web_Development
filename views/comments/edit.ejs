<% include ../partials/header%>

<div class="container">
	<div class="row">
		<h2 style="text-align: center;">Edit Comments</h2>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT%>" method="POST">
				<div class="form-group">
					<textarea class="form-control" type="text" name="comment[text]" value="<%=comment.text%>" ><%=comment.text%>
					</textarea>	
				</div>
				
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>	
				</div>
			</form>	
			<a href="/campgrounds">Go Back</a>	
		</div>
	</div>
</div>



